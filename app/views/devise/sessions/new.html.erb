<div class="container-login">
  <div class="div-img-login">
    <%= image_tag "insta.png", class: "img-insta-login" %>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: false,
                  class: "input-login",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: false,
                  class: "input-login",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <div class="div-forgot">
      <%= render "devise/shared/forgot" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Connexion", class: "btn-login" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <footer><h2>Vous n'avez pas de compte? <%= render "devise/shared/sign_up" %></h2></footer>


</div>
